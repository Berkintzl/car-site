{
  "name": "car-listing-site",
  "version": "1.0.0",
  "description": "A car listing website with user authentication and CRUD operations",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "jest tests/api.test.js",
    "test:frontend": "jest tests/frontend.test.js",
    "backup": "node -e \"require('./server.js')\"",
    "health-check": "curl http://localhost:3000/api/health"
  },
  "keywords": [
    "car",
    "listing",
    "website",
    "nodejs",
    "mysql"
  ],
  "author": "Developer",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-session": "^1.17.3",
    "helmet": "^6.1.5",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.3",
    "nodemailer": "^6.9.1",
    "path": "^0.12.7",
    "sharp": "^0.32.1",
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^22.1.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "projects": [
      {
        "displayName": "API Tests",
        "testEnvironment": "node",
        "testMatch": [
          "<rootDir>/tests/api.test.js",
          "<rootDir>/tests/performance.test.js",
          "<rootDir>/tests/security.test.js"
        ],
        "setupFilesAfterEnv": [
          "<rootDir>/tests/setup.js"
        ]
      },
      {
        "displayName": "Frontend Tests",
        "testEnvironment": "jsdom",
        "testMatch": [
          "<rootDir>/tests/frontend.test.js"
        ],
        "setupFilesAfterEnv": [
          "<rootDir>/tests/setup.js"
        ]
      }
    ],
    "collectCoverageFrom": [
      "server.js",
      "public/js/*.js",
      "!public/js/vendor/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
